<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/text_input_gray_background">

    <TextView
        android:id="@+id/counterNumWordListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="@string/placeholder_word_list_item_num"
        android:textColor="@color/vanilla_white"
        android:textSize="30sp"
        android:minWidth="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/wordsAzeEngWordListItem"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wordsAzeEngWordListItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="@string/placeholder_word_list_item_word_aze"
        android:textColor="@color/vanilla_white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/counterNumWordListItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/counterNumWordListItem"
        app:layout_constraintTop_toTopOf="@+id/counterNumWordListItem" />

</androidx.constraintlayout.widget.ConstraintLayout>