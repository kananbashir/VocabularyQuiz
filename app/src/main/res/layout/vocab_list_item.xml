<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/vocab_list_item_bkg">

    <ImageView
        android:id="@+id/nonFavoriteButtonVocabListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/cont_desc_vocab_list_buttons"
        android:paddingStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_favorite_non_fill"
        tools:ignore="DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/vocabListTitleVocabListItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/comfortaa"
        android:text="@string/placeholder_custom_vocab_list"
        android:textColor="@color/text_input_gray_background"
        android:textSize="17sp"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editButtonVocabListItem"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/nonFavoriteButtonVocabListItem"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/detailsButtonVocabListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/cont_desc_vocab_list_buttons"
        android:layout_marginEnd="15dp"
        android:background="@drawable/go_details_button_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/deleteButtonVocabListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/cont_desc_vocab_list_buttons"
        android:layout_marginEnd="5dp"
        android:background="@drawable/go_delete_button_selector"
        app:layout_constraintBottom_toBottomOf="@+id/detailsButtonVocabListItem"
        app:layout_constraintEnd_toStartOf="@+id/detailsButtonVocabListItem"
        app:layout_constraintTop_toTopOf="@+id/detailsButtonVocabListItem"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/editButtonVocabListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/cont_desc_vocab_list_buttons"
        android:layout_marginEnd="5dp"
        android:background="@drawable/go_edit_button_selector"
        app:layout_constraintBottom_toBottomOf="@+id/deleteButtonVocabListItem"
        app:layout_constraintEnd_toStartOf="@+id/deleteButtonVocabListItem"
        app:layout_constraintTop_toTopOf="@+id/deleteButtonVocabListItem"
        tools:ignore="TouchTargetSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>